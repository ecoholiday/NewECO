<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_page_back"
    tools:context=".Activity.LandingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtEcoholiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="eco-holiday"
            android:textColor="#ffffff"
            android:textSize="56sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:fontFamily="serif" />
        <TextView
            android:id="@+id/txtLandingPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="plan a holiday"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:typeface="serif"
            app:fontFamily="cursive" />
        <TextView
            android:id="@+id/txtLandingMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="save money"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:typeface="serif"
            app:fontFamily="cursive" />
        <TextView
            android:id="@+id/txtLandingEnvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="save environment"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:typeface="serif"
            app:fontFamily="cursive" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp">

        <!-- <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/get_staretd_button"
            android:gravity="center"
            android:text="get started"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="36sp"
            app:fontFamily="serif"
            android:textStyle="bold|italic"/> -->

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


    </LinearLayout>


</RelativeLayout>