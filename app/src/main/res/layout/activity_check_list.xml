<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckList">
    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="91dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/packingList"
            android:layout_width="match_parent"
            app:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Packing List"
            android:background="@color/imageBackground"
            android:textColor="#FFAE76"
            android:textSize="40dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/imageBackground"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="clothes"
                android:layout_marginLeft="5dp"
                android:textColor="#F9AA33"
                android:textSize="20dp" />
            <CheckBox
                android:id="@+id/chkSirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shirts / Tanks"/>


            <CheckBox
                android:id="@+id/chkJeans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeans / Shorts"/>

            <CheckBox
                android:id="@+id/chkCoats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coats / Sweaters"/>

            <CheckBox
                android:id="@+id/chkSleepwear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleepwear"/>

            <CheckBox
                android:id="@+id/chkUnder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Underwear"/>


            <CheckBox
                android:id="@+id/chkSocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socks"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/imageBackground"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Shoes"
                android:textColor="#F9AA33"
                android:textSize="20dp" />
                <CheckBox
                    android:id="@+id/chkTennis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tennis Shoes"/>
                <CheckBox
                    android:id="@+id/chkSandals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sandals"/>
                <CheckBox
                    android:id="@+id/chkFlips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flip Flops"/>
                <CheckBox
                    android:id="@+id/chkWShoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Shoes"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/imageBackground"
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Extras"
                        android:layout_marginLeft="5dp"
                        android:textColor="#F9AA33"
                        android:textSize="20dp" />
                    <CheckBox
                        android:id="@+id/chkHats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hats"/>


                    <CheckBox
                        android:id="@+id/check22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bags"/>


                    <CheckBox
                        android:id="@+id/chkSlippers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slippers"/>



                    <CheckBox
                        android:id="@+id/chkSunglasses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunglasses"/>


                    <CheckBox
                        android:id="@+id/chkSunCream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun Cream"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/imageBackground"
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="12dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Others"
                        android:textColor="#F9AA33"
                        android:textSize="20dp" />
                    <CheckBox
                        android:id="@+id/chkBlanket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel blanket"/>


                    <CheckBox
                        android:id="@+id/chkDocs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel Documents"/>


                    <CheckBox
                        android:id="@+id/chkBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"/>

                    <CheckBox
                        android:id="@+id/chkCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camera"/>



                    <CheckBox
                        android:id="@+id/chkMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maps"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>