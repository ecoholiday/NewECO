<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CheckList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100sp">
            <LinearLayout
                android:layout_marginLeft="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <view
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="0sp"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_park"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtParkReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="National Park"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />
                <view
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="0sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </View>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_report"/>
                <TextView
                    android:textStyle="bold|italic"
                    android:fontFamily="serif"
                    android:layout_weight="1"
                    android:id="@+id/txtDaysReport"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Days"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </View>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car_report"/>
                <TextView
                    android:textStyle="bold|italic"
                    android:fontFamily="serif"
                    android:layout_weight="1"
                    android:id="@+id/txtDistReport"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 KMs"/>
                <View
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </View>


            </LinearLayout>
        </FrameLayout>




    </RelativeLayout>


</RelativeLayout>