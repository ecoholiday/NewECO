<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CampSite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12sp"
            app:cardElevation="5sp"
            android:layout_margin="10sp">
            <LinearLayout
                android:layout_margin="5sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="cursive"
                        android:textColor="@color/carbonSaved"
                        android:textSize="28sp"
                        android:id="@+id/txtParkCampSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="cursive"
                        android:textColor="@color/carbonSaved"
                        android:textSize="28sp"
                        android:id="@+id/txtCampSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/linLenTime"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_hike"/>
                    <TextView
                        android:id="@+id/txtLength"
                        android:textStyle="bold"
                        android:fontFamily="cursive"
                        android:textColor="@color/txtDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_time"/>
                    <TextView
                        android:id="@+id/txtTime"
                        android:textStyle="bold"
                        android:fontFamily="cursive"
                        android:textColor="@color/txtDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:fontFamily="cursive"
                        android:textColor="@color/txtDist"
                        android:textSize="22sp"
                        android:id="@+id/txtFacilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="facilties|birdwatching"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:fontFamily="cursive"
                    android:textColor="@color/txtDist"
                    android:textSize="22sp"
                    android:id="@+id/txtCampSiteDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desc"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>